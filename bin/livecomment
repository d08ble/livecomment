#!/usr/bin/env node

var LiveComment = require('../livecomment')

var options = {
    debug: 1,
    dangerousCodeExecution: ['client', 'server'],
    common: {
      ignore: [
        '.git',
        '.git/**',
        'node_modules',
        'node_modules/**',
        'node_modules/**/.*',
        'node_modules/**/.*/**'
//        /\/node_modules.*/
      ]
    },
    noLogging: [
      'watch.skip',
      'watch.scan',
      'object.parsed',
//      'exe.emit',
//      'exe.frame',
      'run.eval'
    ],

    paths: {}
}
options.paths[__dirname+'/..'] = {
    ignore: [
      /^\.idea.*/
    ]
}

var livecomment = new LiveComment(options)
